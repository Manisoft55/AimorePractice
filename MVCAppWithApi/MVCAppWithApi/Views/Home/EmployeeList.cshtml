                @Html.DisplayFor(modelItem => item.manager_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.department_id)
            </td>
            <td>
                @Html.ActionLink("Update Employee", "UpdateEmployee", new { empid=item.employee_id }) |
                @Html.ActionLink("View Employee", "ViewEmployee", new { empid=item.employee_id }) |
                @Html.ActionLink("Delete Employee", "DeleteEmployee", new { empid=item.employee_id })
